<h2>Sign up</h2>

<%= simple_form_for(@user, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-vertical' }, :validate => true) do |f| %>
<!--   <%= f.error_notification %> -->
 <%= devise_error_messages! %>

  <div class="form-inputs">
    <%= f.input :username, required: true%>
    <%= f.input :email, :validate => true %>
    <%= f.input :password, :validate => true%>
    <%= f.input :password_confirmation, :validate => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", :class => 'btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
